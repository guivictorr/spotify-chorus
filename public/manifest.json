{
  "manifest_version": 3,
  "name": "Spotify Chorus",
  "version": "1.0",
  "description": "Add Chorus link to Spotify songs",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["index.js"],
      "css": ["style/index.css"],
      "matches": ["https://open.spotify.com/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://open.spotify.com/*"]
    }
  ]
}

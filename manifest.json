{
  "manifest_version": 3,
  "name": "Spotify Chorus",
  "version": "1.0",
  "description": "Add Chorus link to Spotify songs",
  "content_scripts": [
    {
      "js": [
        "scripts/song-info.js",
        "scripts/mutation-observer.js",
        "scripts/chorus-button.js"
      ],
      "css": ["style/index.css"],
      "matches": ["https://open.spotify.com/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://open.spotify.com/*"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "Spotify Chorus",
  "version": "1.0",
  "description": "Add Chorus link to Spotify songs",
  "content_scripts": [
    {
      "js": [
        "scripts/current-track.js",
        "scripts/globals.js",
        "scripts/track-rows.js",
        "scripts/mutation-observer.js"
      ],
      "matches": ["https://open.spotify.com/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://open.spotify.com/*"]
    }
  ]
}
